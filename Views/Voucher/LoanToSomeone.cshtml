    <script type="text/javascript">
        $(function () {
            $.ajax({
                url: '/Home/CheckSessionTimeOut',
                type: "POST",
                success: function (result) {
                    if (result == "True") {
                        window.top.location = "/Account/Login";
                    }
                },
                complete: function () {
                    // setupSessionTimeoutCheck();
                }
            });

            $('#txtDate').datepicker({
                dateFormat: "yy-mm-dd"
            });
            $('#txtVoucherNo').val('@ViewBag.EVoucherNo');
            $("#txtDate").datepicker("setDate", new Date());
            LoadDebitLedger();
            LoadCreditLedger();
        });
        function LoadDebitLedger() {
            $.ajax({
                url: '/Voucher/LoadLoanDeditLedger',
                async: true,
                success: function (result) {
                    var mySelect = $('#ddlDebitLedger');
                    $.each(result, function (val, text) {
                            mySelect.append(
                                $('<option></option>').val(this.Id).html(this.Name)
                        );
                    });
                },
                error: function (result, textStatus, jqXHR) {

                }
            });
        }
        function LoadCreditLedger() {
            $.ajax({
                url: '/Voucher/LoadLoanCreditLedger',
                async: true,
                data: { Code: 'Expense' },
                success: function (result) {
                    var mySelect = $('#ddlCreditLedger');
                    $.each(result, function (val, text) {
                        mySelect.append(
                            $('<option></option>').val(this.Id).html(this.Name)
                        );
                    });
                },
                error: function (result, textStatus, jqXHR) {

                }
            });
        }

        function Save() {
            var crAccId = $('#ddlCreditLedger').val();
            var drAccId = $('#ddlDebitLedger').val();
            var amount = $('#txtAmount').val();
            var particulers = $('#txtParticulers').val();
            $.ajax({
                url: '/Voucher/SaveEVoucher',
                type: 'post',
                data: { crAccId: crAccId, drAccId: drAccId, amount: amount, particuler: particulers },
                dataType: 'json',
                success: function (result) {
                    if (result.IsSuccess == true) {
                        toastr.success(result.Message);
                        $('#txtBatchName').val('');
                        $('#txtBatchCode').val('');
                    }
                }

            });

        }
        function Close() {
            window.location = "/Voucher/LoanToSomeone";
        }
    </script>

