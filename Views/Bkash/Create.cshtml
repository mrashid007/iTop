            <br />
            <div class="col4">

            </div>
            <div class="col6">
                <input id="btnSave" type="button" class="br-buttons" value="Send" onclick="Save()" />
                <input id="btnClear" type="button" class="br-buttons" value="Clear" onclick="Clear()" />
            </div>
           

        </div>

    </div>
    <div style="padding: 0px; width: 50%; float: left; overflow: visible">
