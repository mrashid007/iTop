<body>
    <div style="padding: 0px; width: 100%; overflow: visible">
        <fieldset>
            <legend>Voucher Info</legend>
            <div class="onerow">
                <div class="col2">
                    Voucher No
                </div>
                <div class="col3">
                    <input style="width: 100%" id="txtVoucherNo" disabled="disabled" type="text" />
                </div>
                <div class="col2">
                    Date
                </div>
                <div class="col3">
                    <input id="txtDate" style="width: 50%" type="text" />
                </div>
            </div>

        </fieldset>
        <fieldset>
            <legend>Voucher Details(Dedit)</legend>
            <div class="onerow">
                <div class="col2">
                    Loan To <font color="red">*</font>
                </div>
                <div class="col3">
                    <select id="ddlDebitLedger" style="width:100%"></select>
                </div>
                <div class="col2">
                    Amount <font color="red">*</font>
                </div>
                <div class="col3">
                    <input class="rounded" id="txtAmount" type="text" />
                </div>

            </div>

        </fieldset>
        <fieldset>
            <legend>Loan Payment By(Credit)</legend>
            <div class="onerow">
                <div class="col2">
                    Payment <font color="red">*</font>
                </div>
                <div class="col3">
                    <select id="ddlCreditLedger" style="width:100%"></select>
                </div>
                <div class="col2">
                    Particulers
                </div>
                <div class="col3">
                    <textarea id="txtParticulers" style="width: 100%; height: 50px;"></textarea>
                </div>

            </div>
        </fieldset>
        <div class="onerow" style="align-content: center">
            <br />
            <br />
            <input id="btnSave" type="button" class="br-buttons" value="Save" onclick="Save()" />
            <input id="btnClose" type="button" class="br-buttons" value="Clear" onclick="Close()" />
        </div>
    </div>
