    <script type="text/javascript">
        var hdfStdId = 0;
        var receiptVm = {};
        $(function () {
            $.ajax({
                url: '/Home/CheckSessionTimeOut',
                type: "POST",
                success: function (result) {
                    if (result == "True") {
                        window.top.location = "/Account/Login";
                    }
                    LoadResellerLevels();
